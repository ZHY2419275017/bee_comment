<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- 数据库驱动包位置 -->
    <classPathEntry location="E:/repository/mysql/mysql-connector-java/5.1.21/mysql-connector-java-5.1.21-sources.jar" />

    <context id="sqlGenerate" targetRuntime="MyBatis3Simple">
        <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <!-- 数据库链接URL、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
            connectionURL="jdbc:mysql://localhost:3306/mall?characterEncoding=utf8"
            userId="root" password="">
        </jdbcConnection>

         <!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer;
         为 true时把JDBC DECIMAL和NUMERIC类型解析为java.math.BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- 生成Pojo包名和位置 -->
        <javaModelGenerator targetPackage="com.mall.comment.pojo"
            targetProject="E:\idea_workspaces\workspace01\mall_comment\src\main\java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="true" />
            <!-- 清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 生成Mapper映射XML文件位置 -->
        <sqlMapGenerator targetPackage="com.mall.comment.mapperxml"
            targetProject="E:\idea_workspaces\workspace01\mall_comment\src\main\java">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- 生成Mapper接口文件位置 -->
        <javaClientGenerator type="XMLMAPPER"
            targetPackage="com.mall.comment.mapper" targetProject="E:\idea_workspaces\workspace01\mall_comment\src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 要生成哪些表(更改tableName和domainObjectName就可以) -->
        <!-- tableName:要生成的表名
        domainObjectName:生成后的实例名
        -->
        <table tableName="mall_address"/>
        <table tableName="mall_cart"/>
        <table tableName="mall_catagory"/>
        <table tableName="mall_comment"/>
        <table tableName="mall_order"/>
        <table tableName="mall_order_item"/>
        <table tableName="mall_pay_info"/>
        <table tableName="mall_product"/>
        <table tableName="mall_user"/>
    </context>
</generatorConfiguration>
